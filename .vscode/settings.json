{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/node_modules": true,
        "**/.next": true,
        "**/package-lock.json": false,
        "**/bun.lock": false
    },
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.patterns": {
        "package.json": "package-lock.json,bun.lock,.npmrc",
        ".gitignore": ".gitattributes,.gitkeep",
        "README.md": "CHANGELOG.md,LICENSE.md"
    }
}