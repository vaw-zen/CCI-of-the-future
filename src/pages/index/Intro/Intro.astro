---
import background from "../../../assets/cleaning.mp4";
// import Navbar from "../navbar/navbar";
import FirstSection from "./first-section.astro";
import SecondSection from "./second-section/second-section.astro";
---

<main style="width:100vw; height:100vh">
	<!-- <Navbar current="Home" /> -->
	<section style="width: 100%; height: 100%; color: white; z-index: -1;">
		<section>
			<div
				style="position:absolute; transform:translate(-50%,-50%); top:50%; left:50%; width:100%;z-index:-1; height:100%;"
			>
				<div
					style="position:absolute; transform:translate(-50%,-50%);
					 top:50%; left:50%; width:101%;background-color: black;
					  height:101%;z-index: 1; marginTop:-5vh; opacity:0.5; "
				>
				</div>
				<video
					src={background}
					style=" width:100%; height:100%;object-fit:cover;filter:grayscale(50%);opacity:0.8"
					autoplay
					muted
					loop
				>
				</video>
			</div>
		</section>
	</section>
	<section
		style="width: 100%; margin-top: -10vh; background:#141416; min-height: 10vh; "
	>
			<FirstSection />
			<SecondSection />
	</section>
</main>

<style>
	@import url("https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;700&display=swap");
	*::selection {
		color: #000;
		background-color: #cafb42;
	}
	
</style>
