---
const { text } = Astro.props;
---

<div class="text-flow">
    <div
        class="container"
        onmouseover="this.style.animationPlayState='paused';"
        onmouseout="this.style.animationPlayState='running';"
    >
        {
            [...text, ...text].map((e, i) => {
                return (
                    <div class="text-container">
                        <h1
                            style={`text-shadow: ${
                                i % 2 === 0
                                    ? `-2px -2px 0 white,2px -2px 0 white,-2px 2px 0 white,2px 2px 0 white`
                                    : "none"
                            };
                        color: ${i % 2 === 0 ? "#141416" : "white"}`}
                        >
                            {e}
                        </h1>
                        <div class="_" />
                    </div>
                );
            })
        }
    </div>
</div>

<style>
    *::selection {
        color: #000;
        background-color: #cafb42;
    }

    .text-flow {
        display: flex;
        max-width: 100vw;
        display: flex;
        align-items: center;
        margin-top: 30px;
        overflow: hidden;
        margin-top: 1700px;
    }

    .container {
        display: flex;
        animation: move-right 55s linear infinite;
        align-items: center;
    }

    .text-container {
        display: flex;
        overflow: hidden;
        white-space: nowrap;
    }
    ._ {
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 50px;
        font-weight: bold;
        margin: 20px 20px 0 20px;
    }
    h1 {
        font-size: 110px;
        cursor: default;
    }

    @media (max-width: 990px) {
        .text-flow {
            margin-top: 2050px;
        }
        h1 {
            font-size: 70px;
        }
    }
    @media (max-width: 768px) {
        .text-flow {
            margin-top: 2600px;
        }
        h1 {
            font-size: 60px;
        }
        ._ {
            width: 60px;
            top: 15px;
        }
    }

    @keyframes move-left {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-100%);
        }
    }
</style>
