---
const { title, paragraph, img, last } = Astro.props;
---

<div class="right-container" style={`margin-bottom: ${last ? 0 : "30px"}`}>
    <img src={img} />
    <div style="padding-left: 30px;">
        <a> {title}</a>
        <p style="font-size:16px;line-height: 26px;">{paragraph}</p>
    </div>
</div>

<style>
    *::selection {
        color: #000;
        background-color: #cafb42;
    }
    a {
        color: #fff;
        font-size: 26px;
        line-height: 36px;
        justify-self: flex-start;
        font-weight: bold;
        cursor: pointer
    }
    a:hover{
        color: #cafb42;
    }
    img {
        width: 160px;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
    }
    .right-container {
        color: white;
        width: calc(100% - 70px);
        height: 165px;
        background-color: #1a1a1c;
        display: flex;
        overflow: hidden;
        padding: 30px;
        justify-content: flex-start;
        align-items: center;
    }
</style>
