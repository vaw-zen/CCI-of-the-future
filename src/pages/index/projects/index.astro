---
import ImgContainer from "./img-container";
---

<div class="father-container">
    <div class="left-side">
        <h2>RECENT PROJECTS</h2>
        <h1>Featured projects</h1>
        <div>
            <ImgContainer
                client:visible
                title="Heating Tune up, Manham"
                tags={["Plumbing"]}
                img="https://uploads-ssl.webflow.com/63c6818603ef9ce50c6d563d/63c92820616f6dddb45ade02_portfolio-01-740x556.jpg"
            />
        </div>
        <button> <a>VIEW ALL PROJECTS</a></button>
    </div>
    <div class="right-side">
        <div>
            <ImgContainer
                client:visible
                title="Plumbing, New York"
                tags={["Roofing"]}
                img="https://uploads-ssl.webflow.com/63c6818603ef9ce50c6d563d/63c93831f818bd32ad515080_portfolio-02-740x556.jpg"
            />
        </div>
        <div>
            <ImgContainer
                client:visible
                title="Wiring installation, Alabama"
                tags={["Electrical", "Roofing"]}
                img="https://uploads-ssl.webflow.com/63c6818603ef9ce50c6d563d/63c9384a5381dd1cf965f133_portfolio-03-740x556.jpg"
            />
        </div>
    </div>
</div>

<style>
    *::selection {
        color: #000;
        background-color: #cafb42;
    }
    .father-container {
        background-color: #141416;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100vw;
    }
    .left-side {
        max-width: 740px;
        width: calc(55.5% - 30px);
    }
    .left-side div {
        width: 100%;
    }
    .right-side div {
        width: 100%;
    }
    .right-side div:nth-child(1) {
        margin-bottom: 25px;
    }
    .right-side {
        width: calc(44.5% - 30px);
        margin-left: 30px;
        max-width: 540px;
    }
    h1 {
        font-size: 63px;
        color: white;
        margin-top: 10px;
        line-height: 75px;
        font-weight: bold;
    }
    h2 {
        color: #cafb42;
        margin-top: 21px;
        font-weight: bold;
    }
    .left-side button {
        background-color: #cafb42;
        border-color: #cafb42;
        border-radius: 100%;
        margin-top: 40px;
        display: flex;
        width: 100px;
        height: 100px;
        justify-content: center;
        align-items: center;
        cursor: pointer;
    }
    .left-side button a {
        font-weight: bold;
        color: #141416;
        font-size: 16px;
    }
    @media (max-width: 990px) {
        h1 {
            font-size: 45px;
            line-height: 55px;
        }
    }

    @media (max-width: 768px) {
        .father-container {
            flex-direction: column;
        }
        .left-side {
            width: calc(100vw - 30px);
        }
        .right-side {
            width: 100%;
            margin-left: 0;
            margin-top: 40px;
            max-width: calc(100vw - 30px);
        }
    }
</style>
