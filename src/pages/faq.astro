    }

    @media (max-width:950px) {
        .picText{
            height:310px
        }
        
.text p:nth-child(1){
        color: #fff;
        font-size: 80px;
        font-weight: 400;
    }
    }
    @media (max-width:750px) {
        .services_details h1 {
            font-size: 50px;
        }
    }
    
    @media (max-width:642px) {
        .services_details h1 {
            font-size: 40px;
        }
        
.text p:nth-child(1){
        color: #fff;
        font-size: 40px;
        font-weight: 400;
    }
    }
    @media (max-width: 533px) {
        .services_details h1 {
            font-size:x-large;
        }
    }
    @media (max-width: 350px) {
       .picText img {
        min-width: 300px;
       }
       .text h1 {
        font-size: medium;
       }
    }
    
    @media (max-width: 321px) {
       
       .text p:nth-child(1) {
        font-size: 35px;
       }
    }

</style>
