---
import Fb from "../../assets/icons/FB.svg";
import Instagram from "../../assets/icons/instagram.svg";
import Whatsapp from "../../assets/icons/whatsapp.svg";
import Scroll from "./scroll.jsx";
import background from '../../assets/cleaning.mp4'
---

<main style="width:100vw; height:100vh; padding:5vw;box-sizing: border-box;">
	<section style="width: 100%; height: 100%; color: white">
		<div style="display: flex; justify-content: space-between;">
			<div>
				<div style="font-family: Cera CY Bold;">CB</div>
				<div
					style="font-family: Cera CY Bold; position: relative; top: -5px;"
				>
					CS
				</div>
			</div>

			<div style="display: flex; font-size: 13px;">
				<div>SERVICES</div>
				<div style="margin-left: 5vw;">
					<a href="#contact">CONTACT</a>
				</div>
			</div>
		</div>

		<section>
			<div style="position:absolute; transform:translate(-50%,-50%); top:50%; left:50%; width:100%;z-index:-1; height:100%; margin-top: 100px;">
				
		<video src={background} style="width:100%; height:80%;object-fit:cover;filter:grayscale(100%)"autoplay muted loop  ></video>
		<div style="position:absolute; top:50%; left:50%; transform:translate(-50%,-50%); color:black; font-size:48px; text-align:center;font-weight: 600;">Together We rise</div>
	</div>
		
		</section>

		<section id="social-media-icons">
			<div>
				<img
					style="width:17px; bottom: 100px; position:absolute"
					src={Fb}
				/>
				<img
					style="width:17px; bottom: 40px; position:absolute"
					src={Whatsapp}
				/>
				<img style="width:17px; position:absolute" src={Instagram} />
			</div>
			<div class="scroll" style="display:flex; position:fixed;">
				<Scroll client:load />
			</div>
		</section>
	</section>
</main>
<style>
	.scroll {
		right: 2.6vw;
	}
	#main-title {
		font-family: Cera CY Bold;
		font-size: 100px;
	}
	#social-media-icons {
		position: absolute;
		bottom: 11.3vh;
		width: 92.5vw;
		left: 5vw;
	}
	@media screen and (max-width: 650px) {
		.scroll {
			display: none;
		}
		#main-title {
			font-size: 50px;
		}
		#social-media-icons {
		bottom: 6vh;
	}
	}
	@media screen and (max-width: 1370px) {
		.scroll {
			right: 1.706vw;
		}
	}
</style>
