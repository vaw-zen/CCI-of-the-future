---
import background from "../../assets/cleaning.mp4";
import faresImg from "../../assets/home-page/section-1.jpg";
---

<main style="width:100vw; height:100vh">
	<section style="width: 100%; height: 100%; color: white; z-index: -1;">
		<section>
			<div
				style="position:absolute; transform:translate(-50%,-50%); top:50%; left:50%; width:100%;z-index:-1; height:100%;"
			>
				<div
					style="position:absolute; transform:translate(-50%,-50%);
					 top:50%; left:50%; width:101%;background-color: black;
					  height:101%;z-index: 1; marginTop:-5vh; opacity:0.5; "
				>
				</div>
				<video
					src={background}
					style=" width:100%; height:100%;object-fit:cover;filter:grayscale(50%);opacity:0.8"
					autoplay
					muted
					loop
				>
				</video>
			</div>
		</section>
	</section>
	<section
		style="width: 100%; margin-top: -10vh; background:#141416; min-height: 10vh; "
	>
		<div style="width:100vw; display:flex;justify-content: center;">
			<div>
				<div class="home-container">
					<div class="left-section">
						<div class="img-container">
							<img alt="fares" src={faresImg} />
						</div>
					</div>
					<div class="right-section">
						<div style="height:100%;width: 98.1%;">
							<div style="color:#cafb42; margin-top:21px">
								WORKING WITH EXCELLENT
							</div>
							<div
								style="font-size: 63px; color: white; margin-top:10px; line-height:75px; font-weight: bold;"
							>
								We are a team of professional skilled experts
							</div>
							<p style="color:white; opacity:0.1">
								We work to ensure peopleâ€™s comfort at their
								home, and to provide the best and the fastest
								help at fair aute irure dolor prices.
							</p>
						</div>
					</div>
				</div>
				<div style="height:100vh"></div>
			</div>
		</div>
	</section>
</main>

<style>
	@import url("https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;700&display=swap");
	.home-container {
		margin-top: 10vh;
		display: grid;
		place-items: center;
		grid-template-columns: 1fr 1fr;
		grid-auto-columns: 1fr;
		grid-column-gap: 30px;
		font-family: "DM Sans", sans-serif;
	}
	.home-container .right-section {
		width: 647.5px;
		margin-bottom: 10px;
		height: 50vh;
	}
	.home-container .left-section {
		width: 647.5px;
		margin-bottom: 10px;
		height: 50vh;
		overflow: hidden;
	}
	.home-container .left-section .img-container {
		height: 100%;
		width: 98.1%;
		float: right;
	}
	.home-container .left-section .home-container img {
		width: 610px;
		height: auto;
		object-fit: cover;
		object-position: top;
	}

	@media (max-width: 1327px) {
		.home-container {
			width: 100%;
		}
		.home-container .left-section {
			width: auto;
		}
		.home-container .left-section .img-container {
			width: calc((100vw / 2) - 15px);
		}
		.home-container .left-section .img-container img {
			width: 100%;
		}

		.home-container .right-section {
			width: calc((100vw / 2) - 15px);
		}
	}
</style>
