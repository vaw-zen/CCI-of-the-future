---
import Fb from "../../assets/icons/FB.svg";
import Instagram from "../../assets/icons/instagram.svg";
import Whatsapp from "../../assets/icons/whatsapp.svg";
import Scroll from "./scroll.jsx";
import background from '../../assets/cleaning.mp4'
import logo from '../../assets/pokeball.png'
import hoverSound from '../../assets/sounds/video.mp3'
import before from '../../assets/before.png'
import after from '../../assets/after.png'

---

<main style="width:100vw; height:100vh; padding:5vw;box-sizing: border-box;">
	<section style="width: 100%; height: 100%; color: white">
		<div style="display: flex; justify-content: space-between;">
			<div id="main-title">
			<img src={logo}    style="opacity:0;animation: logo-anim 2s ease-out 2s forwards;logo-rotate 0.5s ease-out 3s forwards;
			" alt="logo">
			
			</div>

			<div style="display: flex; font-size: 14px;">
				<div>SERVICES</div>
				<div style="margin-left: 5vw;">
					<a href="#contact">CONTACT</a>
				</div>
			</div>
		</div>

		<section>
			<div  style="position:absolute; transform:translate(-50%,-50%); top:50%; left:50%; width:100%;z-index:-1; height:100%;">
					
		<video  src={background} style=" width:100%; height:100%;object-fit:cover;filter:grayscale(50%);opacity:0.8"  autoplay muted loop  ></video>
		
		<audio src={hoverSound}   autoplay loop></audio> 	
	</div>
		
		</section>

		<section id="social-media-icons">
			<div>
				<img
					style="width:2%; bottom: 100px; position:absolute"
					src={Fb}
				/>
				<img
					style="width:2%; bottom: 40px; position:absolute"
					src={Whatsapp}
				/>
				<img style="width:2%; position:absolute" src={Instagram} />
			</div>
			<div class="scroll" style="display:flex; position:fixed;">
				<Scroll client:load />
			</div>
		</section>
		
	</section>

</main>

<style>
	.scroll {
		right: 2.6vw;
	}
	#main-title img{
		font-family: Cera CY Bold;
		font-size: 100px; 
		color: #4cd2ff;
		display: flex;
		width: 5%;
		background: transparent;
		position: absolute;
		
	}

	#main-title :hover{
		color: #0099cc;
		
	}
	#social-media-icons {
		position: absolute;
		bottom: 11.3vh;
		width: 92.5vw;
		left: 5vw;
	}
	#social-media-icons img:hover{
	background-color:#87ceeb;
	
	}
	@media screen and (max-width: 650px) {
		.scroll {
			display: none;
		}
		#main-title {
			font-size: 50px;
		}
		#social-media-icons {
		bottom: 6vh;
	}
	}
	@media screen and (max-width: 1370px) {
		.scroll {
			right: 1.706vw;
		}
	}
	@media only screen and (min-width: 768px){
	@keyframes logo-anim {
  0% {
    opacity: 0;
    transform: translateX(-100%);

  }

  100% {
    opacity: 1;
    transform: translate(0, 0) rotate(90deg);
  }
}
	}
	@media only screen and (max-width: 768px){
	@keyframes logo-anim {
  0% {
    opacity: 0;
    transform: translateY(-100%);

  }

  100% {
    opacity: 1;
    transform: translate(0, 0) rotate(90deg);
  }
}
	}



</style>
