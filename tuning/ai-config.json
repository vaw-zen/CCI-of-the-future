{
  "model": {
    "name": "gemini-2.0-flash",
    "maxOutputTokens": 1000,
    "temperature": 0.65,
    "systemInstruction": "Always respond in the same language as the user's prompt. Do not translate unless explicitly asked."
  },
  "chat": {
    "locale": "auto",
    "detectLanguage": true,
    "languageDetectionFunction": "tunisian-arabizi", 
    "timeFormat": {
      "hour": "2-digit",
      "minute": "2-digit"
    }
  },
  "api": {
    "endpoint": "/api/gemini",
    "method": "POST",
    "headers": {
      "Content-Type": "application/json"
    },
    "stream": true
  }
}
